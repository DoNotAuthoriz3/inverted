#include <iostream>
using namespace std;

int main(int argc, const char* argv[])
{
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!

	int x = 0, y = 0;
	int* z;

	z = malloc(sizeof(int)*20);

	for (int i=0; i<10; i++)
	{
		x = 1;
		y = y + x;
		z[y] = y * y;
	}

	for (int i = 0; i < 20; i++)
		cout << "z[i] = " << z[i] << endl;

	return 0;
}

