package inverted.holdings.code.p005;

public class javaExercises
{	
	public static void main(String[] args)
	{
		int leg1 = 0, leg2 = 0;
		
		// TODO Auto-generated constructor stub
		System.out.print("Length of first leg: ");
		try {leg1 = System.in.read(); System.in.read();} catch (Exception e) {};
		
		System.out.print("Length of second leg: ");
		try {leg2 = System.in.read(); System.in.read();} catch (Exception e) {};
		
		System.out.println("The hypotenuse is " + Integer.toString(leg1 + leg2) );
	}	
}
